{
   "builders": [
   {
     "type": "docker",
     "image": "tomcat:8.0",
     "commit": true,
     "exec_user": "root",
     "run_command": [
       "-d", "-i", "-t",
       "--net=host",
       "{{.Image}}"
   ]
   }
   ],
   "variables": {
    "version_no": "{{env `VERSION_NO`}}"
   },
   "provisioners": [
   {
     "inline": [
       "wget http://192.168.0.28:8081/nexus/content/repositories/releases/com/efsavage/hello-world-war/{{user `version_no`}}/hello-world-war-{{user `version_no`}}.war",
       "cp hello-world-war-{{user `version_no`}}.war /usr/local/tomcat/webapps/hello-world.war"
     ],
     "type": "shell"
   }
   ],
   "post-processors": [
     [
     {
        "type":"docker-tag",
        "repository" : "billybrewster/tomcat",
        "tag": "latest",
        "force": "true"
     },
     {
       "type": "docker-push",
       "login": "true",
       "login_username": "billybrewster",
       "login_password": "Newcastle1892!"
     }
     ]
   ]
}
